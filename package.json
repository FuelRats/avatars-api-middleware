{
  "name": "@fuelrats/koa-adorable-avatars",
  "version": "0.1.2",
  "description": "Adorable avatars middleware for koa.js",
  "engines": {
    "node": ">=10.16.0"
  },
  "scripts": {
    "test": "mocha --exit",
    "build": "tsc && npm run build:assets",
    "build:assets": "cp -r src/img dist/img",
    "dev": "concurrently --kill-others --prefix=name --names=server,tslint --prefix-colors=green,magenta \"npm run dev:server\" \"npm run dev:lint\"",
    "dev:server": "onchange -i -k 'src/**/*.ts' -- ts-node test/server.ts",
    "dev:lint": "onchange -i -k 'src/**/*.ts' -- eslint 'src/**/*.ts'",
    "prepublishOnly": "npm run build"
  },
  "author": "",
  "license": "MIT",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "dependencies": {
    "@koa/router": "^10.0.0",
    "avatars-utils": "0.0.4",
    "pure-uuid": "^1.6.2",
    "sharp": "^0.27.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/fuelrats/avatars-api-middleware.git"
  },
  "devDependencies": {
    "@types/chai": "^4.2.14",
    "@types/express": "^4.17.10",
    "@types/koa": "^2.11.6",
    "@types/koa__router": "^8.0.3",
    "@types/mocha": "^8.2.0",
    "@types/node": "^14.14.20",
    "@types/serve-favicon": "^2.5.2",
    "@types/sharp": "^0.27.1",
    "@types/supertest": "^2.0.10",
    "@typescript-eslint/eslint-plugin": "^4.13.0",
    "@typescript-eslint/parser": "^4.13.0",
    "chai": "^4.2.0",
    "concurrently": "^5.3.0",
    "eslint": "^7.17.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jsdoc": "^31.0.3",
    "eslint-plugin-prefer-arrow": "^1.2.2",
    "koa": "^2.13.1",
    "mocha": "^8.2.1",
    "onchange": "^7.1.0",
    "prettier": "^2.2.1",
    "serve-favicon": "^2.5.0",
    "supertest": "^6.0.1",
    "ts-node": "^9.1.1",
    "typescript": "^4.1.3"
  }
}
